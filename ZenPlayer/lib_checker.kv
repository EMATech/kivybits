<PlaylistLabel>:
    canvas:
        Color:
            rgba: self.back_colour
        Rectangle:
            pos: self.pos
            size: self.size
    markup: True
    halign: "center"


<DisplayItem>:
    pos_hint: {'x': 0, 'y': 0}
    orientation: 'horizontal'
    BoxLayout:
        id: images
        orientation: 'vertical'
        size_hint_x: 0.4
        padding: "5sp"
    BoxLayout:
        id: labels
        size_hint_x: 0.6
        orientation: 'vertical'
        padding: "5sp"

<AlbumScreen>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.1
        padding: "5sp"
        Button:
            text: "<<"
            on_press: root.show_previous()
        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: header_label
            size_hint_x: 8
        Button:
            text: ">>"
            on_press: root.show_next()
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.8
        FloatLayout:
            id: row_container
            size_hint_x: 0.9
        Slider:
            orientation: 'vertical'
            size_hint_x: 0.1
            value: 100
            on_value: root.controller.volume = self.value / 100.0
    Label:
        markup: True
        text: "[color=#4444FF]TODO: Now playing. Click to switch to folder[/color]"
        size_hint_y: 0.05

